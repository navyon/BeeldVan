<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CropButton">
        <item name="android:layout_margin">1dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_crop_button</item>
    </style>

    <!--these are the buttons used.
        Simple button is solid green-->
    <style name="button_simple">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_simple</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <!--This is a button with only a border-->
    <style name="button_transparant">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_transparant</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <!--This is a button that stretches across the screen at the bottom
    add a empty view with this style to add space in the center.
    See email comments-->
    <!--The left part-->
    <style name="button_wide_left">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_wide</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>
    <!--The right part-->
    <style name="button_wide_right">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_wide</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="simpleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:inputType">none</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:autoText">false</item>
        <item name="android:singleLine">false</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="standardText">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>


</resources>